/* http://24ways.org/2009/have-a-field-day-with-html5-forms */

/* ---- html5 ---- */

/* used for li elements in order to remove requirement for the "clearfix" */
div.styled-form form, div.styled-form form fieldset, div.styled-form form legend, div.styled-form form ol, div.styled-form form li {
	margin: 0;
	padding: 0;
}

/*	background-color: #9cbc2c;*/
div.styled-form form {
	margin: 2em auto;
	background-color: rgb(160, 160, 255);
	padding: 20px;
	width: 380px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	-khtml-border-radius: 5px;
	border-radius: 5px;
}

div.styled-form form fieldset {
	border: none;
	margin-bottom: 10px;
}

div.styled-form form fieldset:last-of-type {
	margin-bottom: 0;
}

div.styled-form form legend {
	color: #384313;
	background-color: transparent;
	font-size: 16px;
	font-weight: bold;
	padding-bottom: 10px;
	text-shadow: 0 1px 1px rgb(160, 160, 192);
}
/*	text-shadow: 0 1px 1px #c0d576;
 */

div.styled-form form ol {
	margin-top: 0;
	padding-left: 0;
}

div.styled-form form ol li {
	background: rgb(192, 192, 255);
	background: rgba(255, 255, 255, 0.3);
	border-color: rgb(220, 220, 255);
	border-color: rgba(255, 255, 255, 0.6);
	border-style: solid;
	border-width: 2px;
	line-height: 30px;
	list-style: none;
	padding: 5px 10px;
	margin-bottom: 2px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	-khtml-border-radius: 5px;
	border-radius: 5px;
}

div.styled-form form ol ol {
	display: inline-block;
}

div.styled-form form ol ol li {
	background: none;
	border: none;
	display: inline;
}

div.styled-form form label {
	vertical-align: top;
	display: inline-block;
	font-size: 13px;
	font-weight: normal;
	width: 120px;
}

div.styled-form form ol ol label {
	vertical-align: baseline;
}

div.styled-form form fieldset fieldset legend {
	color: #111111;
	font-size: 13px;
	font-weight: normal;
	padding-bottom: 0;
	text-shadow: none;
}

div.styled-form form fieldset fieldset label {
	background:none no-repeat left 50%;
	line-height: 20px;
	width: auto;
}

