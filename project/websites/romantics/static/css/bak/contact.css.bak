div.styled-form form fieldset fieldset label:hover {
	cursor: pointer;
}

div.styled-form form input:not([type=radio]):not([type=checkbox]),
div.styled-form form textarea {
	background: #ffffff;
	border: none;
	font: 13px Courier, Georgia, "Times New Roman", Times, serif;
	outline: none;
	padding: 5px;
	width: 220px;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	-khtml-border-radius: 3px;
	border-radius: 3px;
}

div.styled-form form input:not([type=submit]):focus,
div.styled-form form textarea:focus {
	background: #eaeaea;
}

div.styled-form form textarea {
	height: 8em;
}

div.styled-form form input[type=radio],
div.styled-form form input[type=checkbox] {
	display: inline-block;
	margin-right: 5px;
}

div.styled-form form p.button {
	padding-top: 1em;
}

div.styled-form .error label {
	color: red;
}

/*div.styled-form .error ol {
	animation-duration: 3s;
	animation-iteration-count: infinite;
	animation-direction: alternate;
}*/

div.styled-form .error .error_msg {
	display: block;
	color: black;
	font-size: 1em;
	font-weight: bold;
	text-align: center;
	text-shadow: 0.1em 0.1em 0.2em white;
}

/*div.styled-form .error .error_msg span {
	color: red;
}*/

/*	background: #384313;
 */

div.styled-form form .submit-container {
	padding-top: 0.5em;
	text-align: center;
}

div.styled-form form button,
div.styled-form form p.button input[type=submit] {
	text-align: center;
	background: rgb(96, 96, 192);
	border: none;
	color: #ffffff;
	font: 18px Georgia, "Times New Roman", Times, serif;
	letter-spacing: 1px;
	margin: 0 auto;
	padding: 7px 25px;
	text-shadow: 0 1px 1px #000000;
	text-transform: uppercase;

	-moz-border-radius: 20px;
	-webkit-border-radius: 20px;
	-khtml-border-radius: 20px;
	border-radius: 20px;
}
/*	border: solid black 2px;
 */

div.styled-form form button:hover,
div.styled-form form p.button input[type=submit]:hover {
	background: rgb(64, 64, 192);
	cursor: pointer;
}

