.mini-search-form input[type=text] {
	font-size: 0.8em;

	color: white;
	background-color: transparent;

	outline: none;
	border: none;

}

/*.mini-search-form input[type=text]:focus {
	border-color: white;
	border-color: rgba(255, 255, 255, 0.875);
}*/

.mini-search-form ul.search-fields li {
	display: inline;
	margin: 0;
	padding: 0;
}

.mini-search-form button {
	outline: none;

	-webkit-border-radius: 	0.75em;
	-moz-border-radius:		0.75em;
	-khtml-border-radius:	0.75em;
	border-radius:			0.75em;

	padding: 0.125em 0.375em;

	border-width: 2px;
	border-style: solid;
	border-color: transparent;
	/*border-color: rgb(192, 192, 192);*/
	
	font-size: 0.8em;
	color: rgb(32, 32, 32);
	background-color: rgb(128, 128, 128);
	background-color: rgba(255, 255, 255, 0.5);
}

.mini-search-form button:active {
	color: rgb(220, 220, 220);
	background-color: rgb(32, 32, 32);
	background-color: rgba(255, 255, 255, 0.25);
	border-color: transparent;
	/*border-color: rgb(220, 220, 220);*/
}

.mini-search-form button:focus {
	border-color: rgb(114, 164, 253);
}

